@using MVC.Models.QuizModels

@{
    ViewData["Title"] = "Question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model QuizQuestionViewModel

@{
    ViewData["Title"] = "Quiz";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quiz Question</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container mt-5">
        <div class="card shadow-sm rounded-4">
            <div class="card-header bg-primary text-white fs-5 text-center text-md-start">
                Quiz Question
            </div>
            <div class="card-body">
                <h4 class="mb-4 text-center text-md-start">
                    What is the meaning of: <span class="text-primary">@Model.EnglishText</span> ?
                </h4>

                <form asp-action="Answer" method="post">
                    <input type="hidden" name="WordId" value="@Model.WordId" />
                    <input type="hidden" id="hintValue" value="@Model.CorrectTurkish" />

                    <!-- 📱 Responsive seçenek listesi -->
                    <div class="list-group mb-3">
                        @foreach (var option in Model.TurkishOptions)
                        {
                            <label class="list-group-item d-flex align-items-center">
                                <input class="form-check-input me-2" type="radio" name="SelectedAnswer" value="@option" required />
                                <span>@option</span>
                            </label>
                        }
                    </div>

                    <!-- 📱 Submit butonu ortalanır ve genişlik uyarlanır -->
                    <div class="d-grid d-md-flex justify-content-center">
                        <button type="submit" class="btn btn-success w-100 w-md-auto px-4 py-2">Submit</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- 💡 İpucu butonu -->
        <div class="d-grid d-md-flex justify-content-end mt-3">
            <button id="btnHint" class="btn btn-warning btn-sm w-100 w-md-auto">💡 İpucu Göster</button>
        </div>

        <!-- 💡 İpucu içeriği -->
        <div id="hintArea" class="alert alert-info d-none mt-2">
            <strong>İpucu:</strong> <span id="hintContent"></span>
        </div>

        <!-- 🛑 Quiz'i bitir butonu -->
        <form asp-action="Finish" method="post" class="mt-3"
              onsubmit="return confirm('Quiz\'i bitirmek istediğinize emin misiniz?');">
            <div class="d-grid d-md-flex justify-content-center">
                <button type="submit" class="btn btn-outline-danger btn-sm w-100 w-md-auto">
                    🛑 Quiz'i Bitir
                </button>
            </div>
        </form>
    </div>

    <!-- ✅ Script alanı -->
    @section Scripts {
        <script>
            $(document).ready(function () {
                $("#btnHint").click(function () {
                    const hint = $("#hintValue").val();
                    $("#hintContent").text(hint);
                    $("#hintArea").removeClass("d-none");
                });
            });
        </script>
    }

</body>
</html>
