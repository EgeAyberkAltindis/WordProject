@using MVC.Helper
@using MVC.Models.QuizModels
<body>
    @model QuizResultViewModel

    <div class="container mt-5">
        <div class="card shadow-sm rounded-4">
            <div class="card-header bg-success text-white fs-5">📊 Quiz Result</div>
            <div class="card-body">
                <h4>Total Questions: @Model.TotalQuestions</h4>
                <p class="text-success">✅ Correct: @Model.CorrectCount</p>
                <p class="text-danger">❌ Wrong: @Model.WrongCount</p>

                <table class="table table-bordered mt-4">
                    <thead class="table-light">
                        <tr>
                            <th>English Word</th>
                            <th>Correct</th>
                            <th>Wrong</th>
                            <th>Times Shown</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.WordResults)
                        {
                            <tr>
                                <td>@item.English</td>
                                <td>@item.Correct</td>
                                <td>@item.Wrong</td>
                                <td>@item.TimesShown</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="mt-4 text-end">
                    <a href="/Quiz/Start" class="btn btn-primary me-2">🔁 Start New Quiz</a>
                    <a href="/" class="btn btn-outline-secondary">🏠 Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</body>
