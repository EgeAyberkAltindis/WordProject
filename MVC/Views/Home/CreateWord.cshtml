@model MVC.Models.RequestModel.AddFullWordRequestModel

@{
    ViewData["Title"] = "CreateWord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>
        Create Sayfası
    </title>
</head>
<body>
    <h3>Kelime Ekleme</h3>
    <hr />
    <div class=" container">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-warning">
                @TempData["Message"]
            </div>
        }
        
         
          <form asp-action="CreateWord" method="post">
            <div class="form-group">
                <label for="RawInputText">Kelime ve Cümle</label>
                <textarea asp-for="RawInput" class="form-control" rows="5"></textarea>
                <span asp-validation-for="RawInput" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
         </form>


    </div>
            
       
        
    



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

